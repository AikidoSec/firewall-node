{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["oxc", "typescript", "unicorn", "node", "promise"],
  "env": {
    "browser": false,
    "node": true
  },
  "settings": {},
  "rules": {
    "no-console": "error",
    "no-empty": "error",
    "no-proto": "error",
    "no-regex-spaces": "error",
    "eqeqeq": "error",
    "no-prototype-builtins": "error",
    "require-await": "error"
  },
  "ignorePatterns": ["**/wasm/node_code_instrumentation.js"],
  "overrides": [
    {
      "files": ["**/*.ts"],
      "rules": {
        "require-await": "off",
        "no-unused-vars": "off"
      }
    }
  ]
}
